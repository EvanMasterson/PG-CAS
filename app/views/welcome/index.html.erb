<h1>Welcome to the COVID-19 Risk Service! #index</h1>
<p>Find me in app/views/welcome/index.html.erb</p>

<%= form_tag("api/coviddata", method: "get") do %>
  <%= label_tag(:location, "Retrieve Covid-19 Data for your country:") %>
  <%= text_field_tag(:location) %>
  <%= submit_tag("Search") %>
<% end %>

<% if !session[:userinfo].present? %>
  <h1>Login to save your data and get notifications</h1>
  <%-#=image_tag "/assets/028-covid-19.svg", width:72 %>
  <%= button_to 'Login', '/auth/auth0', method: :post %>
<% else %>
  <h1>See dashboard</h1>
  <%= button_to 'See Dashboard', 'dashboard', method: :get %>
  
  <h1>Logout</h1>
  <%#= button_to 'Logout', 'logout', method: :destroy %>
  <%= link_to "logout", logout_path %>
<% end %>