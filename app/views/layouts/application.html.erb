<!DOCTYPE html>
<html>
  <head>
    <title>PGCas</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= yield :cdn_code %>
    <%= stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' %>
    </head>

<body>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <% flash.each do |key, value| %>
         <div class= "alert-success"><%= value %></div>
        <% end %>
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if params[:controller] == 'welcome' %>"><a href="/">Home</a></li>
            <li class="<%= 'active' if params[:controller] == 'dashboard' %>"><a href="/dashboard">My Dashboard</a></li>
          </ul>
          <% if session[:userinfo] %>
            <ul class="nav navbar-nav navbar-right">
              <li class="<%= 'active' if params[:controller] == 'logout' %>"><a id="qsLogoutBtn" href="/logout">Logout</a></li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li class="<%= 'active' if params[:controller] == '/auth/auth0' %>"><%= link_to 'Login', '/auth/auth0', method: :post, id: 'qsLogoutBtn' %></a></li>
              <!-- <li class="<%= 'active' if params[:controller] == '/auth/auth0' %>"><a id="qsLogoutBtn" href="/logout">Login</a></li> -->
            </ul>
          <% end %>
        </div>
      </div>
    </nav>
  <div class="container">
  <body>
    <%= yield %>
  </div>
</body>
</html>
